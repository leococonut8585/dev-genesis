.PHONY: all build run clean test

BINARY_NAME=dev-genesis
BINARY_PATH=../$(BINARY_NAME)

all: build

build:
	@echo "ðŸ”¨ Building Dev Genesis..."
	cd .. && go build -o $(BINARY_NAME) backend/cmd/server/main.go
	@echo "âœ… Build complete: $(BINARY_PATH)"

run: build
	@echo "ðŸš€ Starting Dev Genesis..."
	$(BINARY_PATH)

clean:
	@echo "ðŸ§¹ Cleaning..."
	go clean
	rm -f $(BINARY_PATH)
	rm -f $(BINARY_PATH).exe

test:
	@echo "ðŸ§ª Running tests..."
	go test -v ./...

deps:
	@echo "ðŸ“¦ Installing dependencies..."
	go mod download
	go mod tidy

# Windows specific build
build-windows:
	@echo "ðŸ”¨ Building for Windows..."
	cd .. && GOOS=windows GOARCH=amd64 go build -o $(BINARY_NAME).exe backend/cmd/server/main.go
	@echo "âœ… Windows build complete: $(BINARY_PATH).exe"